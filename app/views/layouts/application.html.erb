<!DOCTYPE html>
<html>
  <head>
    <title>H&eacute;l&egrave;ne &amp; Marc</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <!-- Wrap all page content here -->
    <div id="wrap">

      <!-- Fixed navbar -->
      <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
          <div class="navbar-header">
            <%= link_to "Hélène & Marc", wedding_path, class: "navbar-brand" %>
          </div>
          <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <% prefix = params.has_key?(:locale) ? '/'+params[:locale] : '' %>
              <li class="<%= 'active' if current_page?(prefix+wedding_story_path) %>"><%= link_to t('menu.story'), wedding_story_path %></li>
              <!--<li class="<%= 'active' if current_page?(prefix+wedding_photos_path) %>"><%= link_to t('menu.photos'), wedding_photos_path %></li>-->
              <li class="<%= 'active' if current_page?(prefix+wedding_program_path) %>"><%= link_to t('menu.program'), wedding_program_path %></li>
              <li class="bold <%= 'active' if current_page?(prefix+wedding_rsvp_path) %>"><%= link_to t('menu.rsvp'), wedding_rsvp_path, "data-no-turbolink" => true %></li>
              <li class="<%= 'active' if current_page?(prefix+wedding_transports_path) %>"><%= link_to t('menu.transports'), wedding_transports_path %></li>
              <li class="<%= 'active' if current_page?(prefix+wedding_stay_path) %>"><%= link_to t('menu.stay'), wedding_stay_path %></li>
              <li class="<%= 'active' if current_page?(prefix+wedding_area_path) %>"><%= link_to t('menu.area'), wedding_area_path %></li>
              <li class="<%= 'active' if current_page?(prefix+wedding_gifts_path) %>"><%= link_to t('menu.gifts'), wedding_gifts_path %></li>
              <li class="<%= 'active' if current_page?(prefix+wedding_contact_path) %>"><%= link_to t('menu.contact'), wedding_contact_path %></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li class="flag"><%= link_to image_tag('i18n/en.gif'), url_for(locale: :en), title: 'English version', 'data-no-turbolink' => true %></li>
              <li class="flag"><%= link_to image_tag('i18n/fr.gif'), url_for(locale: :fr), title: 'Version française', 'data-no-turbolink' => true %></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>

      <!-- Page content -->
      <div class="container">   
        <%= yield %>
      </div>

    </div><!--/#wrap -->

    <div id="footer">
      <div class="container">
        <p class="text-muted text-center">Copyright &copy; 2014 - Marc Carr&eacute;</p>
      </div>
    </div>
  </body>
</html>
