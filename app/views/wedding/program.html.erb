<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <h3><%= t('menu.program') %></h3>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-md-push-6 col-lg-push-6">
    <div class="alert alert-info">
      <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10">
            <%= glyphicon('glyphicon-circle-arrow-right') %> <b><%= t('program.instructions') %></b><br />

            <small><%= t('program.instructions_details') %></small>
          </div>
          <div class="col-xs-12 col-sm-12 col-md-1 col-lg-1 text-center">
            <%= link_to glyphicon('glyphicon-calendar'), wedding_calendar_url, download: t('program.calendar_file'), class: "btn btn-default btn-lg", target: "_blank" %>
          </div>
      </div>
    </div>

    <div class="alert alert-info">
      <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-10 col-lg-10">
            <%= glyphicon('glyphicon-circle-arrow-right') %> <b><%= t('program.no_car') %></b><%= t('program.no_car_solution') %><br />
            &nbsp;<br />
            <%= glyphicon('glyphicon-circle-arrow-right') %> <b><%= t('program.spare_seats') %></b><%= t('program.spare_seats_solution') %><br />
          </div>
          <div class="col-xs-12 col-sm-12 col-md-1 col-lg-1 text-center">
            <%= link_to glyphicon('glyphicon-road'), wedding_cars_url, class: "btn btn-default btn-lg" %>
          </div>
      </div>
    </div>
  </div>

  <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-md-pull-6 col-lg-pull-6">
    <%= render 'wedding/events/show_events_list' %>
  </div>
</div>
