<div class="wedding-guests">
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>First name</th>
        <th>Family name</th>
        <th>Date of birth</th>
        <th>Child menu</th>
      </tr>
    </thead>
    <tbody>
      <% @booking.guests.each do |guest| %>
        <tr>
          <td><%= guest.first_name %></td>
          <td><%= guest.family_name %></td>
          <td><%= guest.birth_date.presence || "/" %></td>
          <td><%= guest.is_child? ? (guest.child_menu ? content_tag(:b, t("g.y").capitalize) : t("g.n").capitalize ) : t("g.n").capitalize %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>