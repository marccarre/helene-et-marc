<div class="wedding-guests">
  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th><%= t('rsvp.first_name') %></th>
        <th><%= t('rsvp.family_name') %></th>
        <th><%= t('rsvp.menu.title') %></th>
      </tr>
    </thead>
    <tbody>
      <% @booking.guests.each do |guest| %>
        <tr>
          <td><%= guest.first_name %></td>
          <td><%= guest.family_name %></td>
          <td><%= t('rsvp.menu.' + Wedding::Guest::MENU.select { |k, v| v == guest.menu }.map { |k,v| k.to_s }.first ) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
