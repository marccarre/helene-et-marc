<div class="wedding-events">
  <% if booked_events.empty? %>
    <%= t 'rsvp.n' %>
  <% else %>
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>Event</th>
          <th>Date</th>
          <th>Time</th>
          <th>Presence</th>
        </tr>
      </thead>
      <tbody>
        <% Wedding::Event.all.each do |event| %>
          <tr>
            <td><%= t(event.locale_entry + ".name") %></td>
            <td><%= l(event.date, format: :long) %></td>
            <td><%= l(event.time.in_time_zone("Europe/Paris"), format: :very_short) %></td>
            <td><%= booked_events.include?(event) ? content_tag(:b, t("g.y").capitalize) : t("g.n").capitalize %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>