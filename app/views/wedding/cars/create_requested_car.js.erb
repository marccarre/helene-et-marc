// Submission for requested car succeeded:

// Remove potential errors from previous faulty submission:
$('#car-errors')
  .empty()
  .removeClass('visible')
  .addClass('hidden');

// Make requested cars visible:
$('#requested-cars').removeClass('hidden').addClass('visible');

// Add new requested car to the DOM:
$("<%= escape_javascript(render 'wedding/cars/requested_car', car: @car) %>")
  .appendTo('#table-requested-cars > tbody')
  .effect('highlight');

// Empty form to avoid double submission:
$('#form-cars :input').not('select, :button, :submit, :reset, :hidden').val('');
