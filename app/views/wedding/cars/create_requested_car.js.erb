// Remove potential errors from previous faulty submission:
var id = '#car-errors';
$(id).empty();
$(id).removeClass('visible').addClass('hidden');

// Submission for requested car succeeded:
$('#requested-cars').removeClass('hidden').addClass('visible');
$('<%= escape_javascript(render "wedding/cars/requested_car", car: @car) %>').appendTo('#table-requested-cars > tbody');
$('#table-requested-cars > tbody > tr#<%= dom_id(@car) %>').effect('highlight');